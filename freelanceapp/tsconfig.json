{
  "compilerOptions": {
    /* Base Settings */
    "target": "ESNext",
    "module": "commonjs",        // Node.js uses CommonJS
    "outDir": "./dist",         // Where to emit JS files
    "rootDir": "./src",         // Source directory
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,

    /* Frontend-Only (React) */
    "jsx": "react-jsx",         // Keep for .tsx files
    "lib": ["dom", "dom.iterable", "esnext"],  // Browser APIs

    /* Backend-Only (Node.js) */
    "types": ["node"],          // Include Node.js types
    "moduleResolution": "node", // Standard for Node.js
    "resolveJsonModule": true   // For JSON imports
  },
  "include": ["src/server/src"],
  "exclude": ["node_modules"]
}